{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    
    /* FIX 1: Change "node" to "bundler" to support modern module features */
    "moduleResolution": "bundler", 
    
    /* FIX 2: Required when using 'allowImportingTsExtensions' or 'bundler' */
    "noEmit": true,
    "allowImportingTsExtensions": true,

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
    // Removed "outDir" and "rootDir" because "noEmit": true means TS won't generate files
  },
  "include": ["client/**/*", "server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist"]
}